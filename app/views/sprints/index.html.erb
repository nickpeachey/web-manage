<h3>Current Sprints</h3>

<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <td>Title</td>
    <td>Summary</td>
    <td>In Progress</td>
    <td>Start Date</td>
    <td>Expected End Date</td>
  </tr>
  </thead>
  <tbody>
    <% @sprints.each do |sprint| %>
    <tr>
    <td><%= sprint.title %></td>
    <td><%= sprint.summary %></td>
    <td class="checker" style="text-align: center;"><%= check_box_tag 'in progress', 'yes', sprint.in_progress, :disabled => true %></td>
    <td><%= DateFriendlyFormatter.friendlydate(sprint.start_date) %></td>
    <td><%= DateFriendlyFormatter.friendlydate(sprint.exp_end_date) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="actions">
  <div>
    <%= link_to 'New Sprint', new_sprint_path %>
  </div>
</div>